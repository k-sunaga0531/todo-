.side-bar
  .side-bar__side-bar-header
    .side-bar__side-bar-header__top-items
      .side-bar__side-bar-header__top-items__user-name
      = current_user.name
      .side-bar__side-bar-header__top-items__icons
        .side-bar__side-bar-header__top-items__icons__icon-plus
        = link_to new_group_path do
          = icon('fas' , 'plus', class: 'icon-plus')
        .side-bar__side-bar-header__top-items__icons__icon-edit
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon-edit')
  .side-bar__list-groups
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
